{
  "name": "shoperia",
  "version": "1.0.0",
  "private": true,
  "description": "Happy Shoping",
  "author": "Sulthon Abdul Malik <sulthon.abdmalik@gmail.com>",
  "license": "MIT",
  "main": "src/bin/www",
  "scripts": {
    "start": "node .",
    "start:dev": "cross-env NODE_ENV=development nodemon .",
    "start:debug": "cross-env DEBUG=shoperia:* npm run start:dev",
    "start:debug-express": "cross-env DEBUG=express:* npm run start:dev",
    "client": "npm run start --prefix client",
    "dev": "concurrently \"npm run start:debug\" \"npm run client\"",
    "prod": "cross-env NODE_ENV=production DEBUG=express:* env-cmd npm start",
    "prettier:file": "prettier -w \"{public,src,client/{public,src}}/**/*.{md,html,css,scss,json,js,jsx,ts,tsx,vue}\"",
    "build": "yarn --cwd client build",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false yarn --cwd client install && yarn build"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.5",
    "debug": "^4.3.1",
    "ejs": "^3.1.6",
    "express": "^4.17.1",
    "express-validator": "^6.10.1",
    "http-errors": "^1.8.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.12.5",
    "morgan": "^1.10.0",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "validator": "^13.6.0"
  },
  "devDependencies": {
    "concurrently": "^6.0.2",
    "cross-env": "^7.0.3",
    "dotenv": "^8.2.0",
    "env-cmd": "^10.1.0",
    "husky": "4",
    "lint-staged": "^10.5.4",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1"
  },
  "keywords": [],
  "repository": {
    "type": "git",
    "url": "https://github.com/samara98/shoperia.git"
  },
  "bugs": {
    "url": "https://github.com/samara98/shoperia/issues"
  },
  "homepage": "https://github.com/samara98/shoperia#readme",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{md,html,css,scss,json,js,jsx,ts,tsx,vue}": "prettier -w"
  },
  "engines": {
    "node": "^14.x",
    "npm": "^6.x",
    "yarn": "^1.x"
  }
}
