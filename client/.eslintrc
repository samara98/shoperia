{
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "extends": ["react-app", "react-app/jest"],
  "rules": {
    "react/react-in-jsx-scope": "error",
    "react-hooks/exhaustive-deps": "off"
  }
}
